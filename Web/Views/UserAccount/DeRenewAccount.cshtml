@model Domain.Infrastructure.User

@{
    ViewBag.Title = "ARE YOU SURE";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ph"></div>
<div class="ui grid">
    <div class="twelve wide column">
    </div>
</div>
<div class="ui container grid">
    <div class="ui ten wide column centered">
        <div class="ui grid">
            <div class="ui text container">
                <h2 class="ui dividing header">Renew user account</h2>
                <p></p>
            </div>
            <div class="sixteen wide computer column">
                <div class="ui segment">
                    @using (Html.BeginForm("DeRenewAccount", "UserAccount", FormMethod.Post, new { @class = "ui form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                         
                        <div class="field">
                            <label>email</label>
                            <h3>@Model.Email</h3>
                        </div>
                        <div class="field">
                            <label>Full Name</label>
                            <h3>@Model.UserName</h3>
                        </div>
                        <div class="field">
                            <p class="ui red">ARE YOU SURE YOU WANT TO DEDUCT ONE YEAR TO @Model.UserName ACCOUNT EXPIRATION DATE</p>
                        </div>
                        @Html.HiddenFor(model => model.Id)
                        <button class="ui button red" type="submit">DEDUCT ONE YEAR</button>
                        @Html.ActionLink("Cancel", "Index", new {}, new { @class = "ui button" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>
