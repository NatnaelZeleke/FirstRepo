@model Web.ViewModels.UserViewModel

@{
    ViewBag.Title = "Renew user account";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ph"></div>
    <div class="ui grid">
        <div class="twelve wide column">

        </div>

    </div>
    <div class="ui container grid">
        <div class="ui ten wide column centered">

            <div class="ui grid">
                <div class="ui text container">
                    <h2 class="ui dividing header ">Search user by email</h2>
                    <p></p>
                </div>
                <div class="sixteen wide computer column">
                    <div class="ui segment">
                        @using (Html.BeginForm("GetUserAccount", "UserAccount", FormMethod.Post, new { @class = "ui form error", role = "form" }))
                        {
 
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.AntiForgeryToken()
                             
                            <div class="ui field">
                                <label>Email</label>
                                @Html.TextBoxFor(model => model.Email)
                            </div>
                            
                            <div class="ui field">
                                <button class="ui button primary" type="submit">Find user</button>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>

