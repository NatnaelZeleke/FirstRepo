@model Domain.Infrastructure.User

@{
    ViewBag.Title = "Delete user";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 <div class="ph"></div>
<div class="ui grid">
    <div class="twelve wide column">
    </div>
</div>
<div class="ui container grid">
    <div class="ui ten wide column centered">
        <div class="ui grid">
            <div class="ui text container">
                <h2 class="ui dividing header">ARE YOU SURE YOU WANT TO DELETE THIS USER</h2>
                <p></p>
            </div>
            <div class="sixteen wide computer column">
                <div class="ui segment">
                    @using (Html.BeginForm("DeleteUser", "UserAccount", FormMethod.Post, new { @class = "ui form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                         
                        <div class="field">
                            <label>email</label>
                            <h3>@Model.Email</h3>
                        </div>
                         
                        <div class="field">
                            <p class="ui red">ARE YOU SURE YOU WANT TO DELETE @Model.Email</p>
                        </div>
                        @Html.HiddenFor(model => model.Id)
                        <button class="ui button red" type="submit">DELETE USER</button>
                        @Html.ActionLink("Cancel", "UsersList","Admin", new {}, new { @class = "ui button" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>

