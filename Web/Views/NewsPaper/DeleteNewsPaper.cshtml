@model Domain.Infrastructure.NewsPaper

@{
    ViewBag.Title = "Delete News Paper";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ph"></div>
<div class="ui grid">
    <div class="twelve wide column">

    </div>

</div>
<div class="ui container grid">
    <div class="ui ten wide column centered">

        <div class="ui grid">
            <div class="ui text container">
                <h2 class="ui dividing header">Delete News Paper</h2>
                <p></p>
            </div>
            <div class="sixteen wide computer column">
                <div class="ui segment">
                    @using (Html.BeginForm("DeleteNewsPaper", "NewsPaper", FormMethod.Post, new { @class = "ui form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                         
                        <div class="field">
                            <label>News Paper Name </label>
                            <h3>@Model.Name</h3>
                        </div>
                        <div class="field">
                            <p class="ui red">THIS NEWS PAPER CAN ONLY BE DELETED IF IT IS NOT RELATED TO ANY TENDER</p>
                        </div>
                        @Html.HiddenFor(model => model.Id)
                        <button class="ui button red" type="submit">Delete</button>
                        @Html.ActionLink("Cancel", "Index", new {}, new { @class = "ui button" })
                    }


                </div>
            </div>
        </div>
    </div>
</div>

