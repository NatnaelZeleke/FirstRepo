@model Web.ViewModels.RegisteredUserViewModel

@{
    ViewBag.Title = "Users List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var count = 0;
}

<div class="ph"></div>
<div class="ui grid">
    <div class="twelve wide column">

    </div>

</div>
<div class="ui container grid">
    <div class="ui fifteen wide column centered">

        <div class="ui grid">
            <div class="ui main text container">
                <h2 class="ui dividing header header-text">List of Users</h2>
                <p></p>
            </div>

            <div class="sixteen wide computer column">
                <div class="ui pointing secondary menu">
                    <a class="item active" data-tab="first">Active Users List <i class="ui label green">@Model.ActiveUserAccountViewModel.Count</i></a>
                    <a class="item  " data-tab="second">In Active User List <i class="ui label">@Model.InActiveUserAccountViewModel.Count</i></a>

                </div>
                <div class="ui active tab segment" data-tab="first">
                    <table class="ui selectable celled table compact">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>

                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Registered On</th>
                                <th>Account Expires</th>
                                <th>Manage</th>
                                 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model.ActiveUserAccountViewModel)
                            {

                                <tr>
                                    <td>@count</td>
                                    <td>@u.User.UserName</td>

                                    <td>@u.User.PhoneNumber</td>

                                    <td>@u.User.Email</td>

                                    <td>
                                        @u.Account.RegisteredOn.ToString("yyyy MMMM dd")
                                    </td>
                                    <td>
                                        @u.Account.AccountExpirationDate.ToString("yyyy MMMM dd")
                                    </td>
                                    <td>
                                        @Html.ActionLink("More","GetUserAccount","UserAccount",new {id= u.User.Id},new {@class="ui button mini basic"})
                                    </td>
                                </tr>

                                count++;
                            }


                        </tbody>

                    </table>
                </div>
                <div class="ui tab segment" data-tab="second">
                    <table class="ui selectable celled table compact">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Registered On</th>
                                <th>Account Expires</th>
                                <th>Manage</th>
                                 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model.InActiveUserAccountViewModel)
                            {

                                <tr>
                                    <td>@count</td>
                                    <td>@u.User.UserName</td>

                                    <td>@u.User.PhoneNumber</td>

                                    <td>@u.User.Email</td>

                                    <td>
                                        @u.Account.RegisteredOn.ToString("yyyy MMMM dd")
                                    </td>
                                    <td>
                                        @u.Account.AccountExpirationDate.ToString("yyyy MMMM dd")
                                    </td>
                                    <td>
                                        @Html.ActionLink("More","GetUserAccount","UserAccount",new {id= u.User.Id},new {@class="ui button mini basic"})
                                    </td>
                                </tr>

                                count++;
                            }


                        </tbody>

                    </table>
                </div>







            </div>
        </div>
    </div>
</div>